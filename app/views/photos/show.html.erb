<h1> Photo View </h1>
<br>
<br>
<div class="container">
<%= image_tag @photo.photo.url(:medium) %>
<h3> <%= @photo.caption %></h3>

<div>
  <br>
  <br>
  <%= link_to "Tag Photo", new_photo_tag_path(@photo), :class=>"btn btn-default" %>
</div>


<p><%= link_to "Edit", edit_photo_path(@photo), :class => "btn btn-default" %></p>
<p><%= link_to "Delete", photo_path(@photo),
                         :data => {:confirm => "You sure?",
                                   :method => "delete"},
                         :class => "btn btn-danger" %></p>

</div>
